{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true, 
    "jsx": "react-native",
    "paths": {
      "@context/*": ["context/*"],
      "@/*": [
        "./*"
      ],
      "~/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
